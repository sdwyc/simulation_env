define block model
(
  size [0.5 0.5 0.5]
  gui_nose 0
)

define topurg ranger
(
	sensor( 			
		#range [ 0.0  30.0 ]
	    	#fov 270.25
	   	#samples 1081

		range [ 0.0  25.0 ]
	    	fov 180
	   	samples 361

	)

  # generic model properties
  color "black"
  size [ 0.050 0.050 0.100 ]
)

define erratic position
(
  #size [0.415 0.392 0.25]
#  size [0.350 0.350 0.250]
  size [0.15 0.15 0.2] 
  origin [-0.050 0.000 0.000 0.000]
  gui_nose 1
  drive "diff"
  topurg(pose [ 0.050 0.000 -0.100 0.000 ])

localization "gps"
#localization "odom"
#odom_error [0.03 0.03 0.0  0.05] 
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1

  gui_nose 0
  gui_grid 0

  gui_outline 0
  gripper_return 0
  fiducial_return 0
  laser_return 1

)

# set the resolution of the underlying raytrace model in meters
resolution 0.02

interval_sim 100  # simulation timestep in milliseconds

window
( 
  size [ 1920 1004 ] 
  center [-0.101 0.508] 
  scale 44.378 # pixels per meter
  show_data 0

)

# load an environment bitmap
floorplan
( 
   bitmap "museum.jpg"
#    bitmap "env-maze.png"
    map_resolution 0.05
#   size [28.000 15.000 0.600] 
#   size [10.000 10.000 0.600] 
    size [495.000 256.000 2.000]
#   size [15.000 13.000 0.600]
   name "hospital"
)

